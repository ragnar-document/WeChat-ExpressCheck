.page-container{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 100vh;
}

.logo-contaienr image{
  width: 224rpx;
  height: 120rpx;
}

.page-content{
  width: 630rpx;
  text-align: center;
}

.form-picker{
  padding: 10rpx;
  margin: 10rpx 0;
  background-color: #3278e6;
  color: #fff;
  border-radius: 10rpx;
}

.form-item{
  margin-bottom: 10px;
}

.form-item-input{
  border: 1px solid #3278e6;
  border-radius: 5px;
  height: 42px;
  color: #3278e6;
  line-height: 42px;
  margin-bottom: 200rpx; 
}


.form-item-btn{
  background-color: #3278e6;
  color: #fff;
}

.form-item-btn_hover{
  opacity: .8;
}